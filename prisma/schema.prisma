generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Author {
  id        Int     @id @default(autoincrement())
  name      String
  bio       String?
  avatarUrl String?
  posts     Post[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  slug  String @unique
  posts Post[]
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String
  slug     String  @unique
  badge    String?
  excerpt  String?
  content  String  @db.LongText
  imageUrl String?

  facebookUrl    String?
  linkedinUrl    String?
  twitterUrl     String?
  youtubeUrl     String?
  email          String?
  whatsappNumber String?



  authorId   Int?
  companyId  Int?
  categoryId Int

  // üîê ADMIN APPROVAL
  status       PostStatus @default(PENDING)
  createdById  Int?
  approvedById Int?
  approvedAt   DateTime?

  publishedAt DateTime?
  views       Int       @default(0)
  shares      Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  author   Author?  @relation(fields: [authorId], references: [id])
  company  Company? @relation(fields: [companyId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  createdBy  User? @relation("CreatedPosts", fields: [createdById], references: [id])
  approvedBy User? @relation("ApprovedPosts", fields: [approvedById], references: [id])

  comments Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  postId    Int
  name      String
  email     String?
  content   String
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id])
}

model Company {
  id            Int      @id @default(autoincrement())
  name          String
  slug          String   @unique
  tagline       String?
  description   String?
  industry      String?
  location      String?
  companySize   String?
  website       String?
  logoUrl       String?
  coverImageUrl String?
  isVerified    Boolean  @default(false)
  createdAt     DateTime @default(now())

  // ‚úÖ ADD THIS
  recruiters User[]

  jobs                Job[]
  followers           CompanyFollower[]
  articles            Post[]
  supplierDirectories SupplierDirectory[]
}

model CompanyFollower {
  id        Int      @id @default(autoincrement())
  companyId Int
  userId    Int
  createdAt DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@unique([companyId, userId])
}

model Job {
  id             Int     @id @default(autoincrement())
  title          String
  slug           String  @unique
  description    String  @db.LongText
  employmentType String // Full-time, Part-time
  experience     String?
  salaryRange    String?
  location       String
  isRemote       Boolean @default(false)
  isActive       Boolean @default(true)
  views          Int     @default(0)

  companyId  Int
  postedById Int

  createdAt DateTime @default(now())

  company      Company          @relation(fields: [companyId], references: [id])
  postedBy     User             @relation(fields: [postedById], references: [id])
  applications JobApplication[]
}

model JobApplication {
  id        Int      @id @default(autoincrement())
  jobId     Int
  userId    Int
  resumeUrl String?
  coverNote String?
  status    String   @default("applied")
  createdAt DateTime @default(now())

  job  Job  @relation(fields: [jobId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([jobId, userId])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("candidate")
  createdAt DateTime @default(now())

  username   String  @unique
  fullName   String?
  headline   String?
  about      String? @db.LongText
  location   String?
  avatarUrl  String?
  websiteUrl String?

  isOnboarded Boolean @default(false)

  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])

   createdEvents  Event[] @relation("CreatedEvents")
   approvedEvents Event[] @relation("ApprovedEvents")

  jobsPosted        Job[]
  jobApplications   JobApplication[]
  followedCompanies CompanyFollower[]

  magazines Magazine[]


  // ‚úÖ FIXED RELATIONS
  submittedDirectories SupplierDirectory[] @relation("SubmittedDirectories")
  approvedDirectories  SupplierDirectory[] @relation("ApprovedDirectories")

  createdPosts  Post[] @relation("CreatedPosts")
  approvedPosts Post[] @relation("ApprovedPosts")

  createdBanners AdvertisementBanner[] @relation("CreatedBanners")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String
  entity    String
  entityId  Int?
  userId    Int?
  createdAt DateTime @default(now())
}

enum DirectoryStatus {
  PENDING
  APPROVED
  REJECTED
}

model SupplierDirectory {
  id            Int      @id @default(autoincrement())
  name          String
  slug          String   @unique
  // ‚úÖ ADD THIS
  companyId     Int?
  company       Company? @relation(fields: [companyId], references: [id])
  phoneNumber   String?
  email         String?
  // ‚úÖ JSON ARRAYS
  tradeNames    Json? // ["AMBA", "US Mold Builders"]
  videoGallery  Json? // ["https://youtube.com/...", "..."]
  description   String   @db.LongText
  website       String?
  logoUrl       String?
  coverImageUrl String?
  // ‚úÖ SOCIAL MEDIA LINKS
  socialLinks   Json?


  // ‚úÖ PRODUCTS / SUPPLIES
  productSupplies Json?
  // ["Injection Molds", "Hot Runner Systems", "Tooling Design"]

  status         DirectoryStatus @default(PENDING)
  isLiveEditable Boolean         @default(false)

  views          Int             @default(0)
  connections    Int             @default(0)

  submittedById Int
  approvedById  Int?

  createdAt  DateTime  @default(now())
  approvedAt DateTime?

  // ‚úÖ FIXED RELATIONS
  submittedBy User  @relation("SubmittedDirectories", fields: [submittedById], references: [id])
  approvedBy  User? @relation("ApprovedDirectories", fields: [approvedById], references: [id])
}

enum PostStatus {
  PENDING
  APPROVED
  REJECTED
}


enum BannerStatus {
  ACTIVE
  INACTIVE
}

enum BannerPlacement {
  HOME_TOP
  HOME_MIDDLE
  HOME_BOTTOM

  ARTICLE_TOP
  ARTICLE_MIDDLE
  ARTICLE_BOTTOM

  SUPPLIER_TOP
  SUPPLIER_AFTER_VIDEO
  SIDEBAR
  FOOTER
}

model AdvertisementBanner {
  id          Int          @id @default(autoincrement())
  title       String
  imageUrl    String
  targetUrl   String?
  placement   BannerPlacement
  status      BannerStatus @default(INACTIVE)

  position    Int          @default(0)

  startDate   DateTime?
  endDate     DateTime?

  impressions Int          @default(0)
  clicks      Int          @default(0)

  createdById Int
  createdBy   User @relation("CreatedBanners", fields: [createdById], references: [id])

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

enum EventStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique

  logoUrl     String?
  bannerUrl   String?

  startDate   DateTime
  endDate     DateTime

  description String   @db.LongText

  websiteUrl  String?
  registerUrl String?
  location    String?

  // Calendar helpers
  calendarUrl String?

  status      EventStatus @default(DRAFT)
  views       Int      @default(0)

  createdById Int
  approvedById Int?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime?

  createdBy   User  @relation("CreatedEvents", fields: [createdById], references: [id])
  approvedBy  User? @relation("ApprovedEvents", fields: [approvedById], references: [id])

  registrations EventRegistration[]
}

model EventRegistration {
  id        Int      @id @default(autoincrement())

  eventId   Int
  event     Event    @relation(fields: [eventId], references: [id])

  fullName  String
  email     String
  phone     String

  companyName String?
  jobTitle    String?
  country     String?
  city        String?

  industry    String?
  experience  String?
  attendeeType String?

  ticketType  String?
  interests   Json?

  specialRequirements String? @db.LongText

  status      String   @default("REGISTERED")

  createdAt   DateTime @default(now())

  @@index([eventId])
}


enum MagazineStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Magazine {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String?  @db.LongText

  coverImageUrl String?
  pdfUrl        String   // Cloudinary PDF URL
  flipbookPages Json? 

  status       MagazineStatus @default(DRAFT)

  createdById Int
  createdBy   User @relation(fields: [createdById], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime?

  registrations MagazineRegistration[]
}

model MagazineRegistration {
  id          Int      @id @default(autoincrement())

  magazineId  Int
  magazine    Magazine @relation(fields: [magazineId], references: [id])

  firstName   String
  lastName    String
  email       String
  companyName String?
  jobTitle    String?
  country     String?

  createdAt   DateTime @default(now())

  @@index([magazineId])
}
