generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Author {
  id        Int     @id @default(autoincrement())
  name      String
  bio       String?
  avatarUrl String?
  posts     Post[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  slug  String @unique
  posts Post[]
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String
  slug     String  @unique
  badge    String?
  excerpt  String?
  content  String  @db.LongText
  imageUrl String?

  authorId   Int?
  companyId  Int?
  categoryId Int

  // üîê ADMIN APPROVAL
  status       PostStatus @default(PENDING)
  createdById  Int?
  approvedById Int?
  approvedAt   DateTime?

  publishedAt DateTime?
  views       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  author   Author?  @relation(fields: [authorId], references: [id])
  company  Company? @relation(fields: [companyId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  createdBy  User? @relation("CreatedPosts", fields: [createdById], references: [id])
  approvedBy User? @relation("ApprovedPosts", fields: [approvedById], references: [id])

  comments Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  postId    Int
  name      String
  email     String?
  content   String
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id])
}

model Company {
  id            Int      @id @default(autoincrement())
  name          String
  slug          String   @unique
  tagline       String?
  description   String?
  industry      String?
  location      String?
  companySize   String?
  website       String?
  logoUrl       String?
  coverImageUrl String?
  isVerified    Boolean  @default(false)
  createdAt     DateTime @default(now())

  // ‚úÖ ADD THIS
  recruiters User[]

  jobs                Job[]
  followers           CompanyFollower[]
  articles            Post[]
  supplierDirectories SupplierDirectory[]
}

model CompanyFollower {
  id        Int      @id @default(autoincrement())
  companyId Int
  userId    Int
  createdAt DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@unique([companyId, userId])
}

model Job {
  id             Int     @id @default(autoincrement())
  title          String
  slug           String  @unique
  description    String  @db.LongText
  employmentType String // Full-time, Part-time
  experience     String?
  salaryRange    String?
  location       String
  isRemote       Boolean @default(false)
  isActive       Boolean @default(true)

  companyId  Int
  postedById Int

  createdAt DateTime @default(now())

  company      Company          @relation(fields: [companyId], references: [id])
  postedBy     User             @relation(fields: [postedById], references: [id])
  applications JobApplication[]
}

model JobApplication {
  id        Int      @id @default(autoincrement())
  jobId     Int
  userId    Int
  resumeUrl String?
  coverNote String?
  status    String   @default("applied")
  createdAt DateTime @default(now())

  job  Job  @relation(fields: [jobId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([jobId, userId])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("candidate")
  createdAt DateTime @default(now())

  username   String  @unique
  fullName   String?
  headline   String?
  about      String? @db.LongText
  location   String?
  avatarUrl  String?
  websiteUrl String?

  isOnboarded Boolean @default(false)

  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])

  jobsPosted        Job[]
  jobApplications   JobApplication[]
  followedCompanies CompanyFollower[]

  // ‚úÖ FIXED RELATIONS
  submittedDirectories SupplierDirectory[] @relation("SubmittedDirectories")
  approvedDirectories  SupplierDirectory[] @relation("ApprovedDirectories")

  createdPosts  Post[] @relation("CreatedPosts")
  approvedPosts Post[] @relation("ApprovedPosts")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String
  entity    String
  entityId  Int?
  userId    Int?
  createdAt DateTime @default(now())
}

enum DirectoryStatus {
  PENDING
  APPROVED
  REJECTED
}

model SupplierDirectory {
  id            Int      @id @default(autoincrement())
  name          String
  slug          String   @unique
  // ‚úÖ ADD THIS
  companyId     Int?
  company       Company? @relation(fields: [companyId], references: [id])
  phoneNumber   String?
  email         String?
  // ‚úÖ JSON ARRAYS
  tradeNames    Json? // ["AMBA", "US Mold Builders"]
  videoGallery  Json? // ["https://youtube.com/...", "..."]
  description   String   @db.LongText
  website       String?
  logoUrl       String?
  coverImageUrl String?
  // ‚úÖ SOCIAL MEDIA LINKS
  socialLinks   Json?
  // {
  //   "facebook": "https://facebook.com/...",
  //   "linkedin": "https://linkedin.com/...",
  //   "twitter": "https://twitter.com/...",
  //   "youtube": "https://youtube.com/..."
  // }

  // ‚úÖ PRODUCTS / SUPPLIES
  productSupplies Json?
  // ["Injection Molds", "Hot Runner Systems", "Tooling Design"]

  status         DirectoryStatus @default(PENDING)
  isLiveEditable Boolean         @default(false)

  submittedById Int
  approvedById  Int?

  createdAt  DateTime  @default(now())
  approvedAt DateTime?

  // ‚úÖ FIXED RELATIONS
  submittedBy User  @relation("SubmittedDirectories", fields: [submittedById], references: [id])
  approvedBy  User? @relation("ApprovedDirectories", fields: [approvedById], references: [id])
}

enum PostStatus {
  PENDING
  APPROVED
  REJECTED
}
